{
  "name": "Automated Vulnerability Checker",
  "version": "0.1",
  "description": "Check SSO systems for vulnerability",
  "permissions": ["tabs","webRequest", "webRequestBlocking",
                  "<all_urls>"],
  "background": {
    "scripts": ["utilities.js","background.js"]
  },
  "content_scripts": [
  {
	"matches": ["<all_urls>"],
	"js": ["automateSSO.js", "pressLoginButton.js"]
  }
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "AVC",
	"default_popup": "popup.html"
  },
  "manifest_version": 2
}
